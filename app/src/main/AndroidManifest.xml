<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Internet permission for Firebase Firestore and PayFast -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Storage permissions for Device Storage and PayFast -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="29"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CrecheManagement_App"
        tools:targetApi="31">

        <!-- Payment activities -->
        <activity android:name=".PaymentActivity" />
        <activity android:name=".PayfastWebViewActivity" />

        <!-- Main and authentication -->
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".LoginActivity" android:exported="false" />
        <activity android:name=".RegisterActivity" android:exported="false" />

        <!-- Admin and Staff -->
        <activity android:name=".AdminActivity" android:exported="false" />
        <activity android:name=".StaffActivity" android:exported="false" />
        <activity android:name=".ParentActivity" android:exported="false" />
        <activity android:name=".ProfileActivity" android:exported="false" />

        <!-- Attendance Activities -->
        <activity android:name=".AttendanceActivity" android:exported="false" />
        <activity android:name=".ParentAttendanceActivity" android:exported="false" />
        <activity android:name=".AdminAttendanceActivity" android:exported="false" />
        <activity android:name=".ViewAttendanceActivity" android:exported="false" />

        <!-- Events Activities -->
        <activity android:name=".EventsActivity" android:exported="false" />
        <activity android:name=".AdminEventsActivity" android:exported="false" />

        <!-- Messages -->
        <activity android:name=".ParentListActivity" android:exported="false" />
        <activity android:name=".ChatActivity" android:exported="false" />

    </application>

</manifest>
