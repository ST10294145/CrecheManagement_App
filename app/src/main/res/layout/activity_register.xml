<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF5E6"
    tools:context=".RegisterActivity"
    android:id="@+id/main">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Logo -->
            <ImageView
                android:id="@+id/logoImage"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/logo"
                android:layout_gravity="center" />

            <!-- Role Selector -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register as:"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_marginTop="8dp"/>

            <Spinner
                android:id="@+id/roleSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:entries="@array/user_roles"
                android:minHeight="48dp" />

            <!-- Parent Section -->
            <LinearLayout
                android:id="@+id/parentSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Parent Information"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/parentName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Parent Name"
                    android:background="@android:drawable/edit_text" />

                <EditText
                    android:id="@+id/PhoneNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Mobile Number"
                    android:inputType="phone"
                    android:layout_marginTop="4dp"
                    android:background="@android:drawable/edit_text" />

                <EditText
                    android:id="@+id/homeAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Home Address"
                    android:layout_marginTop="4dp"
                    android:background="@android:drawable/edit_text" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Child Information"
                    android:textStyle="bold"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/childFullName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Child's Full Name"
                    android:background="@android:drawable/edit_text" />

                <EditText
                    android:id="@+id/childDob"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date of Birth"
                    android:inputType="date"
                    android:layout_marginTop="4dp"
                    android:background="@android:drawable/edit_text" />

                <EditText
                    android:id="@+id/childGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Gender"
                    android:layout_marginTop="4dp"
                    android:background="@android:drawable/edit_text" />
            </LinearLayout>

            <!-- Staff Section -->
            <LinearLayout
                android:id="@+id/staffSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Staff Information"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:background="@android:drawable/edit_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Role"
                    android:layout_marginTop="4dp"
                    android:background="@android:drawable/edit_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:layout_marginTop="4dp"
                    android:background="@android:drawable/edit_text" />
            </LinearLayout>

            <!-- Admin Section -->
            <LinearLayout
                android:id="@+id/adminSection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Admin Information"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:textColor="#000" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Full Name"
                    android:background="@android:drawable/edit_text" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Phone Number"
                    android:inputType="phone"
                    android:layout_marginTop="4dp"
                    android:background="@android:drawable/edit_text" />
            </LinearLayout>

            <!-- Common Fields (Email & Password for all roles) -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email *"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/emailInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="example@email.com"
                android:inputType="textEmailAddress"
                android:drawableEnd="@android:drawable/ic_dialog_email"
                android:background="@android:drawable/edit_text" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password *"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="4dp"
                android:textColor="#000" />

            <EditText
                android:id="@+id/passwordInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="********"
                android:inputType="textPassword"
                android:drawableEnd="@android:drawable/ic_lock_lock"
                android:background="@android:drawable/edit_text" />

            <!-- Sign Up Button -->
            <Button
                android:id="@+id/signUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sign up"
                android:textAllCaps="false"
                android:backgroundTint="#0097A7"
                android:textColor="#FFFFFF"
                android:layout_marginTop="20dp" />

            <!-- Already have an account -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Have an account already? Log in"
                android:layout_marginTop="12dp"
                android:layout_gravity="center"
                android:textColor="#000" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
