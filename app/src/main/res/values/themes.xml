<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme -->
    <style name="Base.Theme.CrecheManagement_App" parent="Theme.Material3.DayNight.NoActionBar">

        <!-- Primary brand colors -->
        <item name="colorPrimary">#6200EE</item>
        <item name="colorOnPrimary">#FFFFFF</item>

        <!-- Secondary color (used by pickers/accent) -->
        <item name="colorSecondary">#FBC02D</item>
        <item name="colorOnSecondary">#000000</item>

        <!-- Optional: Tertiary if you want extra highlight shades -->
        <item name="colorTertiary">#FBC02D</item>
        <item name="colorOnTertiary">#000000</item>

        <item name="materialAlertDialogTheme">@style/CustomAlertDialog</item>

    </style>
    <style name="CustomAlertDialog" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <!-- Change the dialog background -->
        <item name="android:background">#FAEBD7</item>
    </style>
    <style name="Theme.CrecheManagement_App" parent="Base.Theme.CrecheManagement_App" />

</resources>
